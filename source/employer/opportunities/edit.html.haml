.modal-content
	.modal-header
		%button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
		%h2.modal-title 
			Edit Job Opportunity
	.modal-body
		%form{role: "form"}
			.form-group
				%label.control-label 
					Title
				%input.form-control{value: "UX designer"}
