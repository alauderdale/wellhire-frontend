				%input.form-control{value: "Wireframes, Photoshop"}
			.form-group
				%label.control-label
					Opportunity Description
				%textarea.form-control{:rows=>"6"}
					Description and such
			.form-group
				%label.control-label
					Team Description
				%textarea.form-control{:rows=>"6"}
